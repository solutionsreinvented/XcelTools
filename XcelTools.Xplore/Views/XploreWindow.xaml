<Window
    x:Class="XcelTools.XpLore.Views.XploreWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Xplore"
    Width="650"
    Height="400"
    AllowsTransparency="True"
    Background="Transparent"
    MouseDown="OnMouseDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border>

        <Grid Margin="10">

            <Grid.Effect>
                <DropShadowEffect
                    BlurRadius="5"
                    Direction="-45"
                    Opacity="0.8"
                    ShadowDepth="4"
                    Color="Gray" />
            </Grid.Effect>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border
                Grid.RowSpan="2"
                Background="#FF403E42"
                BorderBrush="#1A3553"
                BorderThickness="0.5"
                CornerRadius="1" />



            <TextBlock
                Margin="0,5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="14"
                Foreground="#B1D7B4"
                Text="XpLore" />

        </Grid>

    </Border>
</Window>
