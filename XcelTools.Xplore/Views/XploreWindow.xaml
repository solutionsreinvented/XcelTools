<Window
    x:Class="XcelTools.Xplore.Views.XploreWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Xplore"
    Width="600"
    Height="400"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Border>

        <Grid Margin="15">

            <Grid.Effect>
                <DropShadowEffect
                    BlurRadius="15"
                    Direction="-45"
                    Opacity="0.8"
                    ShadowDepth="5"
                    Color="Gray" />
            </Grid.Effect>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border
                Grid.RowSpan="2"
                Background="#1B2430"
                CornerRadius="3" />



            <TextBlock
                Margin="0,5"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="Bold"
                Foreground="#FEE0C0"
                Text="Xplore" />

        </Grid>

    </Border>
</Window>
