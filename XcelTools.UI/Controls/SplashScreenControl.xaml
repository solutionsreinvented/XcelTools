<UserControl
    x:Class="XcelTools.UI.Controls.SplashScreenControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="620"
    Height="300"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="Roboto"
    FontSize="11"
    mc:Ignorable="d">

    <!--#region Resources-->

    <UserControl.Resources>
        <Thickness
            x:Key="GridBorderThickness"
            Bottom="0.4"
            Left="0.4"
            Right="0.4"
            Top="0.4" />
    </UserControl.Resources>

    <!--#endregion-->

    <Border>
        <Grid Background="#404040">

            <Grid Margin="10">

                <!--#region Grid Definitions-->

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="5*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="26" />
                    <RowDefinition Height="26" />
                    <RowDefinition Height="26" />
                    <RowDefinition Height="26" />
                    <RowDefinition Height="26" />
                    <RowDefinition Height="26" />
                    <RowDefinition Height="26" />
                    <RowDefinition Height="26" />
                    <RowDefinition Height="26" />
                    <RowDefinition Height="26" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--#endregion-->

                <!--#region Title-->

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="13"
                    Foreground="Khaki"
                    Text="XcelTools" />

                <!--#endregion-->

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Foreground="Khaki"
                    Text="Application Information:" />
                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    BorderBrush="Gray"
                    BorderThickness="{StaticResource GridBorderThickness}"
                    Content="Name:"
                    Foreground="FloralWhite" />
                <Label
                    Grid.Row="2"
                    Grid.Column="1"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    BorderBrush="Gray"
                    BorderThickness="{StaticResource GridBorderThickness}"
                    Content="XcelTools™"
                    Foreground="YellowGreen" />
                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    BorderBrush="Gray"
                    BorderThickness="{StaticResource GridBorderThickness}"
                    Content="Version:"
                    Foreground="FloralWhite" />
                <Label
                    Grid.Row="3"
                    Grid.Column="1"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    BorderBrush="Gray"
                    BorderThickness="{StaticResource GridBorderThickness}"
                    Content="v5.25.03.0"
                    Foreground="YellowGreen" />
                <Label
                    Grid.Row="4"
                    Grid.Column="0"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    BorderBrush="Gray"
                    BorderThickness="{StaticResource GridBorderThickness}"
                    Content="Publisher:"
                    Foreground="FloralWhite" />
                <Label
                    Grid.Row="4"
                    Grid.Column="1"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    BorderBrush="Gray"
                    BorderThickness="{StaticResource GridBorderThickness}"
                    Content="ReInvented®"
                    Foreground="YellowGreen" />
                <Label
                    Grid.Row="5"
                    Grid.Column="0"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    BorderBrush="Gray"
                    BorderThickness="{StaticResource GridBorderThickness}"
                    Content="Website:"
                    Foreground="FloralWhite" />
                <Label
                    Grid.Row="5"
                    Grid.Column="1"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    BorderBrush="Gray"
                    BorderThickness="{StaticResource GridBorderThickness}"
                    Content="https://www.reinvented.com/xceltools"
                    Foreground="Gray"
                    IsEnabled="False"
                    Opacity="0.5" />

                <TextBlock
                    Grid.Row="6"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Foreground="Khaki"
                    Text="License Information:" />
                <Label
                    Grid.Row="7"
                    Grid.Column="0"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    BorderBrush="Gray"
                    BorderThickness="{StaticResource GridBorderThickness}"
                    Content="User Name:"
                    Foreground="FloralWhite" />
                <Label
                    Grid.Row="7"
                    Grid.Column="1"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    BorderBrush="Gray"
                    BorderThickness="{StaticResource GridBorderThickness}"
                    Content="Username"
                    Foreground="YellowGreen" />
                <Label
                    Grid.Row="8"
                    Grid.Column="0"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    BorderBrush="Gray"
                    BorderThickness="{StaticResource GridBorderThickness}"
                    Content="Organization:"
                    Foreground="FloralWhite" />
                <Label
                    Grid.Row="8"
                    Grid.Column="1"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    BorderBrush="Gray"
                    BorderThickness="{StaticResource GridBorderThickness}"
                    Content="Organization"
                    Foreground="YellowGreen" />
                <Label
                    Grid.Row="9"
                    Grid.Column="0"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    BorderBrush="Gray"
                    BorderThickness="{StaticResource GridBorderThickness}"
                    Content="License Type:"
                    Foreground="FloralWhite" />
                <Label
                    Grid.Row="9"
                    Grid.Column="1"
                    VerticalAlignment="Stretch"
                    VerticalContentAlignment="Center"
                    BorderBrush="Gray"
                    BorderThickness="{StaticResource GridBorderThickness}"
                    Content="License Type"
                    Foreground="MistyRose" />

                <ProgressBar
                    Grid.Row="11"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Width="200"
                    HorizontalAlignment="Center"
                    Foreground="Orange"
                    IsIndeterminate="True" />
            </Grid>
        </Grid>
    </Border>

</UserControl>
